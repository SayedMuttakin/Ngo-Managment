{
  "info": {
    "name": "NGO SMS System Test",
    "description": "SMS System Testing Collection for Satrong Sajghor Traders",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Login (Get Token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:5001/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5001",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "2. Test Single SMS",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "Login থেকে পাওয়া token"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"01712345678\",\n  \"message\": \"Test SMS from Satrong Sajghor Traders\\nআপনার কিস্তি ৳500 টাকা বকেয়া রয়েছে।\"\n}"
        },
        "url": {
          "raw": "http://localhost:5001/api/sms/test",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5001",
          "path": ["api", "sms", "test"]
        }
      }
    },
    {
      "name": "3. Check Scheduler Status",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5001/api/sms/scheduler/status",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5001",
          "path": ["api", "sms", "scheduler", "status"]
        }
      }
    },
    {
      "name": "4. Trigger Due Reminders",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5001/api/sms/send-reminders",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5001",
          "path": ["api", "sms", "send-reminders"]
        }
      }
    },
    {
      "name": "5. Payment Confirmation SMS",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"memberName\": \"রহিম মিয়া\",\n  \"phone\": \"01712345678\",\n  \"amount\": 500,\n  \"remainingAmount\": 1500\n}"
        },
        "url": {
          "raw": "http://localhost:5001/api/sms/payment-confirmation",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5001",
          "path": ["api", "sms", "payment-confirmation"]
        }
      }
    },
    {
      "name": "6. Get SMS Statistics",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5001/api/sms/stats",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5001",
          "path": ["api", "sms", "stats"]
        }
      }
    }
  ]
}